<%= form_for [:manage, @asset] do |f| %>
  <div class="form-group">
    <div class="row">
      <div class="col-lg-4 text-right">
        <%= f.label :title %>
      </div>
      <div class="col-lg-8">
        <%= f.text_field :title, class: "form-control", :required => true %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-lg-4 text-right">
        <%= f.label :description %>
      </div>
      <div class="col-lg-8">
        <%= f.text_area :description, :class => "form-control", :rows => 5, :cols => 120 %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-lg-4 text-right">
        <%= f.label :owner, "Owner Email" %>
      </div>
      <div class="col-lg-8">
        <%= f.text_field :owner, :class => "form-control"  %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-lg-4 text-right">
        <%= f.label :address %>
      </div>
      <div class="col-lg-8">
        <%= f.text_field :address, :class => "form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-lg-4 text-right">
        <%= f.label :sqmt, 'Area in square meter' %>
      </div>
      <div class="col-lg-8">
        <%= f.text_field :sqmt, :class => "form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-lg-4 text-right">
        <%= f.label :price %>
      </div>
      <div class="col-lg-8">
        <%= f.text_field :price, :class => "form-control" %>
      </div>
    </div>
  </div>
  <% if f.object.type == 'House' %>
    <div class="form-group">
      <div class="row">
        <div class="col-lg-4 text-right">
          <%= f.label :rooms %>
        </div>
        <div class="col-lg-8">
          <%= f.text_field :rooms, :class => "form-control" %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-lg-4 text-right">
          <%= f.label :floors %>
        </div>
        <div class="col-lg-8">
          <%= f.text_field :floors, :class => "form-control" %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-lg-4 text-right">
          <%= f.label :air_cond, "Air Condition" %>
        </div>
        <div class="col-lg-8">
          <%= f.check_box :air_cond %>
        </div>
      </div>
    </div>
  <% end %>

  <% if f.object.type == 'ComplexBuilding' %>
    <div class="form-group">
      <div class="row">
        <div class="col-lg-4 text-right">
          <%= f.label :units %>
        </div>
        <div class="col-lg-8">
          <%= f.text_field :units, :class => "form-control" %>
        </div>
      </div>
    </div>
  <% end %>

  <% if f.object.type == 'CommercialUnit' %>
    <div class="form-group">
      <div class="row">
        <div class="col-lg-4 text-right">
          <%= f.label :shops %>
        </div>
        <div class="col-lg-8">
          <%= f.text_field :shops, :class => "form-control" %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-lg-4 text-right">
          <%= f.label :parking %>
        </div>
        <div class="col-lg-8">
          <%= f.text_field :parking, :class => "form-control" %>
        </div>
      </div>
    </div>
  <% end %>


  <div class="row">
    <div class="col-lg-4">

    </div>
    <div class="col-lg-8">
      <%= f.submit class: "btn btn-success" %>
      <%= link_to "Cancel", manage_assets_path, class: "btn btn-default" %>
    </div>
  </div>
<% end %>