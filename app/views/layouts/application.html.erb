<!DOCTYPE html>
<html>
  <head>
    <title>PropertyTest</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
    <h5 class="my-0 mr-md-auto font-weight-normal">Company name</h5>
    <nav class="my-2 my-md-0 mr-md-3">
      <a class="p-2 text-dark" href="#">Features</a>
      <a class="p-2 text-dark" href="#">Enterprise</a>
      <a class="p-2 text-dark" href="#">Support</a>
      <a class="p-2 text-dark" href="#">Pricing</a>
    </nav>
    <a class="btn btn-outline-primary" href="#">Sign up</a>
  </div>
  <main role="main">


    <div class="container">
      <!-- flash messages -->
      <% if flash[:notice] %>
        <div class="alert alert-success" role="alert">
          <span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span> <%= flash[:notice]%>
        </div>
      <% elsif flash[:alert] %>
        <div class="alert alert-danger" role="alert">
          <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span> <%= flash[:alert] %>
        </div>
      <% elsif flash[:error] %>
        <div class="alert alert-danger" role="alert">
          <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span> <%= flash[:error] %>
        </div>
      <% end %>
    <%= yield %>
    </div>
  </main>

  </body>
</html>
