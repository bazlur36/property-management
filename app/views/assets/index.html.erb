<div class="album py-5 bg-light">
  <div class="row">
    <% @assets.each do |asset| %>
    <div class="col-md-4">
      <div class="card mb-4 box-shadow">
        <div class="image-thumb">
        <% if asset.image.attached? %> <img src="<%= (url_for(asset.image)) %>"> <% end %>
        </div>
        <div class="card-body">
          <p class="card-text"><%= asset.description %></p>
          <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
              <%= link_to "View", polymorphic_path(asset), class: "btn btn-sm btn-outline-secondary" %>

            </div>
            <% if asset.is_sold %>
              <span class="badge badge-secondary">This Asset is already sold</span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
      <% end %>

  </div>
</div>
